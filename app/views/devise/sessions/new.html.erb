<div id="title" class="jumbotron">
    
    <h2> Sign In </h2>

</div>


<div class="authform thin_margins">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">

      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
      <% end -%>
      <br/>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= link_to "Forgot password?", new_password_path(resource_name), class: '' %>
    </div>
    <br/>
      <%= f.submit 'Sign in', :class => 'btn btn-primary btn-xl page-scroll' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px; margin-top:20px;">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
        </div>
      <% end -%>
  <% end %>
</div>
