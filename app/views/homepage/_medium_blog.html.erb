<section id="blog">
  <div class="row">
      <div class="text-center container">
          <div class="section-heading-2"><%= link_to "ScaleRep Blog", "https://www.medium.com/@scalerep", target: "_blank"  %></div>
          <p class="section-sharing">We're learning so much about how to best engage with people at scale -- our blog shares our knowledge and helps your team better interact with leads and users.</p>
      </div>
  </div>
  <br><br>

  <div class="container">
    <% Medium_News.medium_news.each_with_index do |article, index| %>
      <% if index == 1 %>
        <div class="row">
      <% end %>

      <div class="column">
        <%= link_to image_tag("#{article[:img]}", :class => "blog_image left"), article[:link], target: "_blank" %>
        <div class='blog-titles'><%= link_to article[:title], article[:link], target: "_blank", class:'h4'%></div>
      </div>

      <% if index == 1 %>
        </div>
      <% end %>
    <% end %>
  </div>

</section>
