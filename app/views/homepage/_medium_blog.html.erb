<section id="blog">


        <div class="row">
            <div class="text-center">
                <h2 class="section-heading"><%= link_to "ScaleRep Blog", "https://www.medium.com/@scalerep", target: "_blank"  %></h2>
            </div>
        </div>
        <br><br>
    
    




            
            <% Medium_News.medium_news.each_with_index do |article, index| %>

              <% if index == 2 %>
                <div class="row">
              <% end %>
              
              <div class="column">
                <h4><%= article[:date].to_time.strftime('%m/%d/%Y') %></h4>
                <div class="blog-titles">
                  <h3><%= link_to article[:title], article[:link], target: "_blank"  %></h3>
                </div>
                <%= link_to image_tag("#{article[:img]}", :class => "blog_image"), article[:link], target: "_blank" %>
              </div>

              <% if index == 2 %>
                </div>
              <% end %>
            <% end %>

            <div>
            </div>
            
</section>
