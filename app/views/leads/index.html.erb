        </div>

      </div>




      <div class="card">
        <div class="card-header" id="qualifiedLeadsHeader">
          <h5 class="mb-0">
            <button class= "btn btn-link" data-toggle="collapse" data-target="#customer_accounts" aria-expanded="true" aria-controls="qualifiedLeads">
              Client Accounts
            </button>
          </h5>
        </div>

        <% if @current_table == "customer_accounts" %>
          <div id="customer_accounts" class="collapse show" aria-labelledby="qualifiedLeadsHeader">
        <% else %>
          <div id="customer_accounts" class="collapse" aria-labelledby="qualifiedLeadsHeader">
        <% end %>
          <div class="card-body">
            <% if @accounts.count == 0 %>
              <p> No Client Accounts </p>
            <% else %>
              <div style="overflow: auto;">
                

                <table class = " airtable_data table table-striped">
                  <thead class = "thead-dark">
                    <tr>
                          <th scope = 'col'>name</th>
                          <th scope = 'col'>website</th>
                          <th scope = 'col'>do not contact?</th>

                    </tr>
                  </thead>

                  <tbody>
                    <% @accounts.each do |account| %>
                      <tr>

                            <td> <%= account.name %></td>
                            <td> <%= account.website %></td>
                            <td> <%= account.do_not_contact.to_s %></td>

                      </tr>
                    <% end %>
                  </tbody>

                </table>

                <%= will_paginate @accounts, :params => { :table_id => :customer_accounts }%>

              </div>

            <% end %>

          </div>
      </div>





    </div>
  </div>
</div>
