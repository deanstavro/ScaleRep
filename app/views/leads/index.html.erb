<div id="title" class="jumbotron">
  <br/>
  <h1><%= @user.client_company.name if @user.client_company %> Lead List</h1>
</div>



<div class = 'thin_margins'>
  <div id="accordion">
    <div class="card">
      <div class="card-header" id="meetingsSetHeader">
        <h5 class="mb-0">
          <button class="btn btn-link" data-toggle="collapse" data-target="#meetingsSet" aria-expanded="true" aria-controls="meetingsSet">
            Meetings Set
          </button>
        </h5>
      </div>


      <% if @current_table == "meetingsSet" %>
        <div id="meetingsSet" class="collapse show" aria-labelledby="meetingsSetHeader">
      <% else %>
        <div id="meetingsSet" class="collapse" aria-labelledby="meetingsSetHeader">
      <% end %>
        <div class="card-body">
          <% if @meeting_set.count == 0 %>
            <p> No Meetings Set </p>
          <% else %>
            <div style="overflow: auto;">
              <table class = " airtable_data table table-striped">
                <thead class = "thead-dark">
                  <tr>

                        <th scope = 'col'>date sourced</th>
                        <th scope = 'col'>first_name</th>
                        <th scope = 'col'>last_name</th>
                        <th scope = 'col'>email</th>
                        <th scope = 'col'>handed off to:</th>
                        <th scope = 'col'>email used</th>
                        <th scope = 'col'>meeting date</th>


                  </tr>
                </thead>

                <tbody>
                  <% @meeting_set.each do |lead| %>
                    <tr>

                          <td> <%= lead.date_sourced %></td>
                          <td> <%= lead.first_name %></td>
                          <td> <%= lead.last_name %></td>
                          <td> <%= lead.email %></td>
                          <td> <%= lead.email_handed_off_too %></td>
                          <td> <%= lead.email_in_contact_with %></td>
                          <td> <%= lead.meeting_time %></td>



                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%= will_paginate @meeting_set, :params => { :table_id => :meetingsSet }%>
            </div>
          <% end %>
        </div>
      </div>
    </div>


    <div class="card">
      
      <div class="card-header" id="interestedLeadsHeader">
        <h5 class="mb-0">
          <button class= "btn btn-link" data-toggle="collapse" data-target="#interestedLeads" aria-expanded="true" aria-controls="interestedLeads">
