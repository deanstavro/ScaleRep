                </tbody>
              </table>
              <%= will_paginate @interested_leads, :params => { :table_id => :interestedLeads }%>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-header" id="blacklistHeader">
        <h3 class="mb-0">
          <button class="btn btn-link" data-toggle="collapse" data-target="#blacklist" aria-expanded="true" aria-controls="blacklist">
            Blacklist
          </button>
        </h5>
      </div>

      <% if @current_table == "blacklist" %>
        <div id="blacklist" class="collapse show" aria-labelledby="blacklistHeader">
      <% else %>
