<%= form_for(salesforce) do |f| %>
    <% if salesforce.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(salesforce.errors.count, "error") %> prohibited this salesforce from being saved:</h2>
        <ul>
        <% salesforce.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <h4> Options </h4>

    <%= f.label :upload_contacts_to_salesforce_option do %>
    <%= f.check_box :upload_contacts_to_salesforce_option %>
    Upload all ScaleRep contacts to Salesforce
    <% end %>
    <br>

    <%= f.label :check_dup_against_existing_contact_email_option do %>
    <%= f.check_box :check_dup_against_existing_contact_email_option %>
    Check ScaleRep contacts against existing contacts in Salesforce by email
    <% end %>

    <% if false %>
        <br>
        <%= f.label :check_dup_against_existing_account_domain_option do %>
        <%= f.check_box :check_dup_against_existing_account_domain_option %>
        Check ScaleRep contacts against existing account domains in Salesforce
        <% end %>
    <% end %>

    <br>
    <br>

    <%= f.submit "Submit", class: "btn btn-primary btn-xl page-scroll header-text-space"  %>

<% end %>
