<div id="title" class="jumbotron">
    <h1>New Template</h1>
</div>


<div>
  <%= form_for @template, url: templates_path, html: { method: :post } do |f| %>
    <% if @template.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(template.errors.count, "error") %> prohibited this template from being saved:</h2>
        <ul>
        <% @template.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container">
        
        <%= f.hidden_field :client_company, value: @client_company.id %>

        <div class="form-group">
           <%= f.label :title, "Name*", class: "control-label" %>
            <%= f.text_field :title, required: true, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :subject, "Subject Line (Leave empty if following-up)", class: "control-label" %>
            <%= f.text_area :subject, :rows => 1, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :body, "Template Body* (Don't include your signature)", class: "control-label" %>
            <p style="font-size:13px;">- For italics, use a single asterisk (*), show *<i>here</i>* <br>
               - For bold, use double asterisks (**), show **<b>in this example</b>**<br>
               - To create a link, use [text](link) format, shown in this [<a href="https://www.scalerep.com" target="_blank">ScaleRep</a>](www.scalerep.com) example
            </p>
            <%= f.text_area :body, :rows => 10, required: true, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
        </div>
    </div>

  <% end %>
</div>

<div class = "container">
<%= link_to 'Back', templates_path %>
</div>
