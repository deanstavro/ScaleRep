<div id="title" class="jumbotron">
  <div class = "container">
    <br>
    <h1>New Campaign</h1>
    <h3>Client Company: <%= @client_company_for_campaign.name %></h3>
    <h3>Persona: <%= @persona.name %> </h3>
  </div>
</div>

<div class="container">

  <%= form_for @campaign, url: client_companies_campaigns_path, :html => {:class => "form-horizontal center"} do |f| %>

      <%= f.hidden_field :persona_id, value: @persona.id %>

      <div class="form-group">
          <%= f.label :campaign_name, "Campaign name*", class: "control-label" %>
          <%= f.text_field :campaign_name, required: true, class: "form-control" %>
      </div>
      <br>

      <div class="form-group">
          <%= f.label :contactLimit, "Campaign contact limit*", class: "control-label" %>
          <%= f.number_field :contactLimit, required: true, :value => 150, class: "form-control" %>
      </div>
      <br>

      <div class="form-group">
          <%= f.label :email_pool, "Set the email account to use (use Shift + Click to select multiple). Do not choose default if you'd like to choose custom emails.", class: "control-label" %><br>
          <%= f.select(:email_pool, @emails , {:selected => @emails[0]},  {:multiple => true, :size => @emails.length}) %>
      </div>
      <br>

      <%= f.button  :submit , name: "subaction",value: @persona_id, class: "btn btn-default btn-primary" %>  
  <% end %>
</div>