<div id="title" class="jumbotron">
  <div class = "container">
    <br/>
    <h1>New Campaign</h1>
    <h3> for <%= @persona_name %> </h3>
  </div>
</div>

<div class="container">
  <%= form_for [@client_company,@campaign], :html => {:class => "form-horizontal center"} do |f| %>

      <div class="form-group">
          <%= f.label :campaign_name, "1. Campaign Name*", class: "control-label" %>

          <%= f.text_field :campaign_name, required: true, class: "form-control" %>

      </div>

      <br>

      <% if false %>

          <div class="form-group">
              <%= f.label :persona_id, "Persona Tag", class: "control-label" %>

              <%= select_tag :persona_id, options_for_select(@company_personas.collect{|p| [p.name, p.id]}), {include_blank: true, class: "form-control"} %>


              <%= label :create_persona, "or Create Persona (If left empty, the above persona tag will apply) ", class: "control-label" %>

              <%= text_field_tag :create_persona, nil, class: "form-control" %>

          </div>

      <br>

      <% end %>


      

      <div class="form-group">
          <%= f.label :user_notes, "2. Extra Notes (Add extra details for ScaleRep reps here)", class: "control-label" %>

          <%= f.text_area :user_notes, :rows => 5, :col => 5, class: "form-control" %>

      </div>

      <br>

      <div class="form-group">
          <%= f.label :personalized, "3. Check if you'd like every e-mail personalized", class: "control-label" %>
 
          <%= f.check_box :personalized, class: "form-control" %>

      </div>
    

      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
  <% end %>
</div>