<div id="title" class="jumbotron">
  <div class = "container">
    <br/>
    <h1><%= @user.client_company.name if @user.client_company %> Campaign List</h1>
  </div>
</div>

<center><p id="error"><%= flash[:error] %></p>
<p id="notice"><%= flash[:notice] %></p></center>


<div class="container">
  <%= link_to '+ Add Campaign', new_client_company_campaign_path, :class=>"btn btn-primary btn-xl page-scroll" %>
</div>

<div class="container">
  <h2> Targeted Campaigns </h2>

  <table class="table table-striped">
    <thead class="thead-light">
      <tr>
        <th scope="col">Campaign</th>
        <th scope="col">Add Leads</th>
        <th scope="col">Persona</th>
        <th scope="col">People</th>
        <th scope="col">Delivered</th>
        <th scope="col">Bouncee</th>
        <th scope="col">Replies</th>
        <th scope="col">Open Rate</th>
        
        <th scope="col">Start Date</th>
      </tr>
    </thead>
    <tbody>
      <% @campaign_array.each do |campaign| %>
        <tr>
          <td><%= campaign["name"] %></td>
          <td>
            <%= form_tag import_to_campaign_leads_path(:campaign => campaign), multipart: true do %>
              <%= file_field_tag :file %>
              <%= submit_tag "Import CSV" %>
            <% end %>
          </td>
          <td><%= campaign.persona.name %></td>
          <td><%= campaign[:metrics][:peopleCount] %></td>
          <td><%= campaign[:metrics][:deliveriesCount] %></td>
          <td><%= campaign[:metrics][:bouncesCount] %></td>
          <td><%=   campaign[:metrics][:repliesCount] %></td>
          <td><%= campaign[:metrics][:opensCount] %></td>

          <% if false %>
          <td><%= reply_rate_calculator(campaign[:metrics][:repliesCount], campaign[:metrics][:deliveriesCount]) %></td>
          <% end %>

          

          <td><%= campaign[:metrics][:created].to_time.strftime('%m/%d/%Y') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>