<div id="title" class="jumbotron">
    <h1>Edit Reply</h1>
</div>

<div>
  <%= form_for @common_reply, :url => {:controller => :common_replies, action: :update} do |f| %>
    <% if @common_reply.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(common_reply.errors.count, "error") %> prohibited this common_reply from being saved:</h2>
        <ul>
        <% @common_reply.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container">

        <div class="form-group">
           <%= f.label :name, "Reply Name*", class: "control-label" %>
            <%= f.text_field :name, required: true, class: "form-control" %>
        </div>

        <div class="form-group">
           <%= f.label :common_message, "Common Message*", class: "control-label" %>
            <%= f.text_field :common_message, required: true, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :reply_message, "Common Reply*", class: "control-label" %>
            <%= f.text_area :reply_message, :rows => 5, :col => 5, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
        </div>
    </div>

  <% end %>
</div>

<div class = "container">
<%= link_to 'Back', common_replies_path %>
</div>
