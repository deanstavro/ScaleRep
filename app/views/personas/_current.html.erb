<div class="card-body">
  <% if @current.count == 0 %>
    <p> No Lead Groups </p>
  <% else %>
    <div>
      <table class = " airtable_data table table-hover">
        <thead class = "thead">
          <tr>
            
            <th>group</th>
            <th>leads</th>
            <th>touchpoints</th>
            <% if current_user.role == 'scalerep' %>
                <th>bounces</th>
            <% end %>
            <th>views</th>
            <th>unique opens</th>
            <th>replies</th>
            <th>CQLs</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @current.each do |persona| %>
            <tr >

              <% if current_user.role == "scalerep" %>
                <td><%= link_to "#{persona.client_company.name} -- #{persona.name}", client_companies_persona_path(persona) %></td>
              <% else %>
                <td><%= link_to persona.name, client_companies_persona_path(persona) %></td>
              <% end %>

              <%  if @metrics_hash[persona] && @metrics_hash[persona][1] %>
                 <td><%= @metrics_hash[persona][1] %></td>
              <% else %>
                  <td>0</td>
              <% end %>

              <%  if @metrics_hash[persona] && @metrics_hash[persona][2] %>
                 <td><%= @metrics_hash[persona][2] %></td>
              <% else %>
                  <td>0</td>
              <% end %>

              <% if current_user.role == "scalerep" %>
                  <%  if @metrics_hash[persona] && @metrics_hash[persona][3] %>
                     <td>
                       <% if @metrics_hash[persona] && @metrics_hash[persona][2] && @metrics_hash[persona][2] >0 %>
                          <%= number_to_percentage(@metrics_hash[persona][3] / @metrics_hash[persona][2].to_f * 100, precision:1) %>
                        <% else %>
                            0%
                        <% end %>

                       <span class="pct">
                        (<%= @metrics_hash[persona][3] %>)
                         
                       </span>
                     </td>
                  <% else %>
                      <td>0%</td>
                  <% end %>
              <% end %>


              <%  if @metrics_hash[persona] && @metrics_hash[persona][5] %>
                 <td>
                    <%= @metrics_hash[persona][5] %>
                 </td>
              <% else %>
                  <td>0</td>
              <% end %>

              <%  if @metrics_hash[persona] && @metrics_hash[persona][4] %>
                <td>
                  <% if @metrics_hash[persona] && @metrics_hash[persona][2] > 0 && @metrics_hash[persona][2] >0 %>
                    <% if  @metrics_hash[persona][1].to_f > @metrics_hash[persona][2].to_f%> 
                      <%= number_to_percentage(@metrics_hash[persona][6] / (@metrics_hash[persona][2].to_f - @metrics_hash[persona][3]) * 100, precision:1) %>
                    <% else %>
                     <%= number_to_percentage(@metrics_hash[persona][6] / (@metrics_hash[persona][1].to_f - @metrics_hash[persona][3]) * 100, precision:1) %>
                    <% end %>
                <% else %>
                    0%
                <% end %>
                  
                  <span class="pct">
                    (<%= @metrics_hash[persona][6] %>)
                  </span>
                </td>
              <% else %>
                  <td>0%</td>
              <% end %>


              <%  if @metrics_hash[persona] && @metrics_hash[persona][4] %>
                <td>
                  <% if @metrics_hash[persona] && @metrics_hash[persona][2] && @metrics_hash[persona][2] >0 %>
                    <% if  @metrics_hash[persona][1].to_f > @metrics_hash[persona][2].to_f%> 
                      <%= number_to_percentage(@metrics_hash[persona][4] / (@metrics_hash[persona][2].to_f - @metrics_hash[persona][3]) * 100, precision:1) %>
                    <% else %>
                     <%= number_to_percentage(@metrics_hash[persona][4] / (@metrics_hash[persona][1].to_f - @metrics_hash[persona][3]) * 100, precision:1) %>
                    <% end %>
                <% else %>
                    0%
                <% end %>
                  
                  <span class="pct">
                    (<%= @metrics_hash[persona][4] %>)
                  </span>
                </td>
              <% else %>
                  <td>0%</td>
              <% end %>
            
              <td><%= @metrics_hash ?  0 : @metrics_hash[persona][0] %></td>

              <td>
                  <span title="Edit">
                    <%= link_to edit_client_companies_persona_path(persona) do %>
                        <%= material_icon.edit.md_24 %>
                    <% end %>
                  </span>

                  <span title="Archive - This lead group will no longer be managed">
                    <%= link_to archive_client_companies_personas_path(persona), method: :put  do %>
                      <%= material_icon.archive.md_24.style('color: grey;') %>
                    <% end %>
                  </span>

                  <span title="Delete">
                    <%= link_to client_companies_persona_path(persona), method: :delete, data: { confirm: 'Are you sure?' }  do %>
                      <%= material_icon.delete.md_24.style('color: red;') %>
                    <% end %>
                  </span>  
              </td>

            </tr>
          <% end %>
        </tbody>

      </table>
      <div class="digg_pagination">
          <div class="page_info">
            <%= page_entries_info @current %>
          </div>
      <%= will_paginate @current, :params => { :tab_id => :current }, :container => false %>
    </div>
    </div>
  <% end %>
</div>
